(program
  (name "test-ccall-puts-stringlit-return42")
  (doc "Call puts with a string literal, then return 42.")
  (version "0.1")

  (type ExitCode
    (alias Int32)
  ) ;; type ExitCode

  (entry main
    (doc "Invoke puts and then succeed with 42.")
    (params ())
    (returns ExitCode)
    (body
      (do
        (ccall "puts"
          (returns Int32)
          (args
            (String "hello from stage0")
          ) ;; args
        ) ;; ccall
        (return 42)
      ) ;; do
    ) ;; body
  ) ;; entry main
) ;; program
