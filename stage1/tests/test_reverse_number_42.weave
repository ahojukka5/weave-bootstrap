(program
  (name "test-reverse-number-42")
  (doc "Reverse digits of a number.")
  (version "0.1")

  (type ExitCode
    (alias Int32)
  )

  (fn reverse-number
    (doc "Reverse the digits of a number.")
    (params (n Int32))
    (returns Int32)
    (body
      (do
        (let reversed Int32 0)
        (let temp Int32 n)
        (while (!= temp 0)
          (do
            (let digit Int32 (- temp (* (/ temp 10) 10)))
            (set reversed (+ (* reversed 10) digit))
            (set temp (/ temp 10))
          )
        )
        (return reversed)
      )
    )
  )

  (entry main
    (doc "Reverse 24 to get 42.")
    (params ())
    (returns ExitCode)
    (body (reverse-number 24))
  )
)
