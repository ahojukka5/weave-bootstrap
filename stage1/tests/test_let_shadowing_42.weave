(program
  (name "test-let-shadowing-42")
  (doc "Test variable shadowing with nested let expressions.")
  (version "0.1")

  (type ExitCode
    (alias Int32)
  )

  (entry main
    (doc "Shadow variable x multiple times and compute 42.")
    (params ())
    (returns ExitCode)
    (body
      (do
        (let x Int32 10)
        (let sum Int32 x)
        (let x Int32 20)  ;; shadow x
        (let sum Int32 (+ sum x))
        (let x Int32 12)  ;; shadow x again
        (return (+ sum x))
      )
    )
  )
)
