(program
  (name "test-triangle-42")
  (doc "Calculate triangular number (sum of 1 to n).")
  (version "0.1")

  (type ExitCode
    (alias Int32)
  )

  (fn triangle
    (doc "Calculate nth triangular number: 1+2+...+n.")
    (params (n Int32))
    (returns Int32)
    (body
      (do
        (let sum Int32 0)
        (let i Int32 1)
        (while (<= i n)
          (do
            (set sum (+ sum i))
            (set i (+ i 1))
          )
        )
        (return sum)
      )
    )
  )

  (entry main
    (doc "Triangle(9) = 45, then subtract 3 to get 42.")
    (params ())
    (returns ExitCode)
    (body (- (triangle 9) 3))
  )
)
