(program
  (name "test-factorial-recursive-42")
  (doc "Calculate factorial recursively.")
  (version "0.1")

  (type ExitCode
    (alias Int32)
  )

  (fn factorial
    (doc "Calculate n! recursively.")
    (params (n Int32))
    (returns Int32)
    (body
      (if-stmt (<= n 1)
        1
        (* n (factorial (- n 1)))
      )
    )
  )

  (entry main
    (doc "Calculate 7! / 120 = 5040 / 120 = 42.")
    (params ())
    (returns ExitCode)
    (body (/ (factorial 7) 120))
  )
)
