(program
  (name "test-factorial-iterative-42")
  (doc "Calculate factorial iteratively.")
  (version "0.1")

  (type ExitCode
    (alias Int32)
  )

  (fn factorial
    (doc "Calculate n! iteratively.")
    (params (n Int32))
    (returns Int32)
    (body
      (do
        (let result Int32 1)
        (let i Int32 1)
        (while (<= i n)
          (do
            (set result (* result i))
            (set i (+ i 1))
          )
        )
        (return result)
      )
    )
  )

  (entry main
    (doc "Calculate 7! / 120 = 5040 / 120 = 42.")
    (params ())
    (returns ExitCode)
    (body (/ (factorial 7) 120))
  )
)
