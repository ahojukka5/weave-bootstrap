(program
  (name "test-fibonacci-recursive-42")
  (doc "Calculate Fibonacci numbers recursively.")
  (version "0.1")

  (type ExitCode
    (alias Int32)
  )

  (fn fib
    (doc "Calculate nth Fibonacci number recursively.")
    (params (n Int32))
    (returns Int32)
    (body
      (if-stmt (<= n 1)
        n
        (+ (fib (- n 1)) (fib (- n 2)))
      )
    )
  )

  (entry main
    (doc "Calculate fib(7) + fib(6) = 13 + 8 = 21, then double to get 42.")
    (params ())
    (returns ExitCode)
    (body
      (do
        (let f7 Int32 (fib 7))
        (let f6 Int32 (fib 6))
        (let sum Int32 (+ f7 f6))
        (return (* sum 2))
      )
    )
  )
)
