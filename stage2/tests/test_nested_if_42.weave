(program
  (name "test-nested-if-42")
  (doc "Test nested if-stmt expressions.")
  (version "0.1")

  (type ExitCode
    (alias Int32)
  )

  (entry main
    (doc "Use nested if-stmt to compute 42.")
    (params ())
    (returns ExitCode)
    (body
      (do
        (let x Int32 10)
        (let y Int32 20)
        (if-stmt (== x 10)
          (if-stmt (== y 20)
            (return (+ x (+ y 12)))
            (return 0)
          )
          (return 1)
        )
      )
    )
  )
)
