(program
  (name "test-linear-interpolate-42")
  (doc "Linear interpolation between two values.")
  (version "0.1")

  (type ExitCode
    (alias Int32)
  )

  (fn lerp
    (doc "Linear interpolation: a + (b - a) * t / 100 (t is 0-100).")
    (params (a Int32) (b Int32) (t Int32))
    (returns Int32)
    (body
      (do
        (let diff Int32 (- b a))
        (let scaled Int32 (* diff t))
        (let offset Int32 (/ scaled 100))
        (return (+ a offset))
      )
    )
  )

  (entry main
    (doc "lerp(10, 50, 80) = 42.")
    (params ())
    (returns ExitCode)
    (body
      ;; 10 + (50-10) * 80/100 = 10 + 40*0.8 = 10 + 32 = 42
      (lerp 10 50 80)
    )
  )
)
