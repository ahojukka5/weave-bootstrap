(program
  (name "test-store-addr-42")
  (doc "Store to an address and load it back.")

  (entry main
    (doc "Alloca x, store 42, load and return.")
    (params)
    (returns Int32)
    (body
      (do
        (let x Int32 0)
        (store Int32 42 (addr x))
        (return (load Int32 (addr x)))
      ) ;; do
    ) ;; body
  ) ;; entry
) ;; program
