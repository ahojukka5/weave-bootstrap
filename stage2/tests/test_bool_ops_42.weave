(program
  (name "test-bool-ops-42")
  (doc "Exercise logical && and || lowering.")
  (version "0.1")

  (type ExitCode
    (alias Int32)
  ) ;; type ExitCode

  (entry main
    (doc "Return 42 if combined boolean expression is true.")
    (params ())
    (returns ExitCode)
    (body
      (do
        (let x Int32 41)
        (if-stmt
          (&&
            (== x 41)
            (||
              (== 0 1)
              (== 1 1)
            ) ;; ||
          ) ;; &&
          (return 42)
          (return 0)
        ) ;; if-stmt
      ) ;; do
    ) ;; body
  ) ;; entry main
) ;; program
