(program
  (name "test-comparison-ops-42")
  (doc "Test various comparison operators: <, <=, >, >=, ==, !=")
  (version "0.1")

  (type ExitCode
    (alias Int32)
  )

  (entry main
    (doc "Test all comparison operators and return 42 if all pass.")
    (params ())
    (returns ExitCode)
    (body
      (do
        (let a Int32 10)
        (let b Int32 20)
        (if-stmt (&&
          (&& (< a b) (<= a 10))
          (&& (> b a) (>= b 20))
        )
          (if-stmt (&& (== a 10) (!= a b))
            (return 42)
            (return 1)
          )
          (return 2)
        )
      )
    )
  )
)
