(program
  (name "test-gcd-42")
  (doc "Calculate GCD using Euclidean algorithm.")
  (version "0.1")

  (type ExitCode
    (alias Int32)
  )

  (fn gcd
    (doc "Calculate greatest common divisor iteratively using subtraction.")
    (params (a Int32) (b Int32))
    (returns Int32)
    (body
      (do
        (let x Int32 a)
        (let y Int32 b)
        (while (!= y 0)
          (do
            (if-stmt (> x y)
              (set x (- x y))
              (set y (- y x))
            )
          )
        )
        (return x)
      )
    )
  )

  (entry main
    (doc "gcd(126, 84) = 42.")
    (params ())
    (returns ExitCode)
    (body (gcd 126 84))
  )
)
