(program
  (name "test-ccall-atoi-42")
  (doc "Call the libc atoi function to parse \"42\".")

  (entry main
    (doc "Invoke atoi(\"42\") and return the result.")
    (params)
    (returns Int32)
    (body
      (return
        (ccall "atoi"
          (returns Int32)
          (args (String "42"))
        ) ;; ccall
      ) ;; return
    ) ;; body
  ) ;; entry
) ;; program
