(program
  (name "test-array-min-42")
  (doc "Find minimum element in array.")
  (version "0.1")

  (type ExitCode
    (alias Int32)
  )

  (fn find-min
    (doc "Find minimum value in array.")
    (params (arr (ptr Int32)) (len Int32))
    (returns Int32)
    (body
      (do
        (let min-val Int32 (load Int32 (ptr-add Int32 arr 0)))
        (let i Int32 1)
        (while (< i len)
          (do
            (let current Int32 (load Int32 (ptr-add Int32 arr i)))
            (if-stmt (< current min-val)
              (set min-val current)
              (do 0)
            )
            (set i (+ i 1))
          )
        )
        (return min-val)
      )
    )
  )

  (entry main
    (doc "Find min of [100,42,85,67,53], which is 42.")
    (params ())
    (returns ExitCode)
    (body
      (do
        (let arr-raw (ptr Int8) (ccall "malloc" (returns (ptr Int8)) (args (Int32 20))))
        (let arr (ptr Int32) (bitcast (ptr Int32) arr-raw))
        (store Int32 100 (ptr-add Int32 arr 0))
        (store Int32 42 (ptr-add Int32 arr 1))
        (store Int32 85 (ptr-add Int32 arr 2))
        (store Int32 67 (ptr-add Int32 arr 3))
        (store Int32 53 (ptr-add Int32 arr 4))
        (return (find-min arr 5))
      )
    )
  )
)
